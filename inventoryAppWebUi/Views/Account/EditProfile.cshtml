@using System.Web.Mvc.Html
@using System.Web.UI.WebControls
@using inventoryAppWebUi.Models
@using Ninject.Infrastructure.Language
@model inventoryAppWebUi.Models.EditProfileViewModel

@{
    ViewBag.Title = "EditProfile";
}


    <div class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                        <div>
                            <h4 class="mb-3">
                                @ViewBag.Title
                            </h4>
                            <p class="mb-0">
                                A supplier dashboard lets you easily gather and visualize customer data from optimizing <br>
                                the customer experience, ensuring customer retention.
                            </p>
                        </div>

                    </div>
                </div>
                @using (Html.BeginForm("EditProfile", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    {
                        if (!string.IsNullOrEmpty(ViewBag.PasswordMisMatch))
                        {
                            <p>@ViewBag.PasswordMisMatch</p>
                        }
                    }
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control textbox", PlaceHolder = "Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control textbox", PlaceHolder = "Username" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control textbox", PlaceHolder = "Old Password" } })
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control textbox", PlaceHolder = "New Password" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control textbox", PlaceHolder = "Confirm Password" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="submit" value="Create" class="btn btn-primary col-sm-12" />
                        </div>
                    </div>
                }
            </div>
                @*<div class="col-lg-5 content-right">
                    <img src="~/Content/assets/images/login/01.png" class="img-fluid image-right" alt="">
                </div>*@

            <!-- Page end  -->
        </div>

    </div>




@Scripts.Render("~/bundles/js")
@Scripts.Render("~/bundles/jqueryval")