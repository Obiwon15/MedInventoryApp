@using System.Globalization
@model inventoryAppWebUi.Models.DrugViewModel

<head>
    @Styles.Render("~/Content/template/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<div id="quill-toolbar1">
    @using (Ajax.BeginForm("SaveProduct", "Products", null, new AjaxOptions
    {
        OnSuccess = "OnSuccess",
        OnFailure = "OnFailure"
    }, new { @class = "form-horizontal", id = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-sm-12">
                @Html.Label("DrugName", "Name")
                @Html.EditorFor(model => model.DrugName, new { htmlAttributes = new { @class = "form-control textbox", @readonly = "readonly", PlaceHolder = "Drug Name" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                @Html.Label("Quantity", "Quantity")
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control textbox", @readonly = "readonly", PlaceHolder = "Quantity" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                @Html.Label("Price", "Price")<span>(@NumberFormatInfo.CurrentInfo.CurrencySymbol)</span>
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control textbox", @readonly = "readonly", PlaceHolder = "Price" } })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-sm-12">
                @Html.Label("ExpiryDate", "Expiry Date")
                @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly"} })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                @Html.Label("SupplierTag", "Supplier Tag")
                @Html.EditorFor(model => model.SupplierTag, new { htmlAttributes = new { @class = "form-control textbox", @readonly = "readonly", PlaceHolder = "Tag number" } })
            </div>
        </div>

        @*<div class="form-group">
            <div class="col-sm-12">
                @Html.Label("DrugCategory", "Drug Category")
                @Html.EditorFor(model => model.DrugCategory[Model.DrugCategoryId], new { htmlAttributes = new { @class = "form-control textbox", @readonly = "readonly"} })
            </div>
        </div>*@

        @*<div class="form-group">
                <div class="col-sm-12">
                    <input id="formBtn" type="submit" value="Add Drug" class="btn btn-primary col-sm-12" />
                </div>
            </div>*@
        @Html.HiddenFor(model => model.Id)

    }
</div>

